<!DOCTYPE html>
<html>
<head>
  <title>Minimarket Array</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="mb-4">Minimarket</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nama Barang</th>
          <th>Qty</th>
          <th>Harga</th>
          <th>Subtotal</th>
          <th>Diskon</th>
          <th>Total Bayar</th>
        </tr>
      </thead>
      <tbody>
        <% 
          let grandTotal = 0;
          product.forEach(p => { 
            let subtotal = p.qty * p.price;  
            let discount = subtotal > 100000 ? subtotal * 0.1 : 0;
            let totalBayar = subtotal - discount;
            grandTotal += totalBayar;
        %>
          <tr>
            <td><%= p.name %></td>
            <td><%= p.qty %></td>
            <td>Rp<%= Number(p.price).toLocaleString() %></td>
            <td>Rp<%= Number(subtotal).toLocaleString() %></td>
            <td>
              <% if (discount > 0) { %>
                Rp<%= Number(discount).toLocaleString() %>
              <% } else { %>
                -
              <% } %>
            </td>
            <td>Rp<%= Number(totalBayar).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="mt-3">
      <h5>Total Semua Bayar: <span class="text-success">Rp<%= Number(grandTotal).toLocaleString() %></span></h5>
    </div>
    <a href="/add" class="btn btn-primary mt-2">Tambah Produk</a>
  </div>
</body>
</html>