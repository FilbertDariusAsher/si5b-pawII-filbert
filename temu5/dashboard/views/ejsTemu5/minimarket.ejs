<!DOCTYPE html>
<html>
<head>
  <title>Minimarket Array</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="mb-4">Minimarket</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th></th>
          <th>Nama Barang</th>
          <th>Qty</th>
          <th>Harga</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; %>
        <% products.forEach(p => {
             let subtotal = p.qty * p.price;
             total += subtotal;
        %>
          <tr>
            <td><a href="/delete"><i class="bi bi-trash-fill text-danger"></i></a></td>
            <td><%= p.name %></td>
            <td><%= p.qty %></td>
            <td>Rp<%= p.price.toLocaleString() %></td>
          </tr>
      </tbody>
      <tfoot>
        <%
          let discount = 90;
          let totalDiscount = (total * (discount / 100));
          let Adiscount = total - (total * (discount / 100));
        %>
        <tr>
          <th colspan="3" class="text-end">Subtotal</th>
          <th>Rp<%= subtotal.toLocaleString() %></th>
        </tr>
        <tr>
         <th colspan="3" class="text-end">Discount</th>
          <th><%= discount.toLocaleString() %>%</th>
        </tr>
        <tr>
         <th colspan="3" class="text-end">Total Discount</th>
          <th><%= totalDiscount.toLocaleString() %></th>
        </tr>
        <tr>
          <th colspan="3" class="text-end">Total</th>
          <th>Rp<%= Adiscount.toLocaleString() %></th>
        </tr>
      </tfoot>
    <% }) %>
    </table>
    <button class="btn btn-primary">Checkout</button>
    <a href="/add" class="btn btn-success">Tambah produk</a>
  </div>
</body>
</html>


